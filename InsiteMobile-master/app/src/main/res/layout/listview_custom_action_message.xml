<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvStationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCustomAction"
        android:layout_alignEnd="@+id/tvCustomActionName"
        android:layout_marginBottom="-38dp"
        android:text="StationName"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="294dp"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/tvCustomActionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCustomAction"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="14dp"
        android:text="ActionName"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="294dp"
        tools:layout_editor_absoluteY="70dp" />

    <TextView
        android:id="@+id/tvLastActivatedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvCustomActionName"
        android:layout_marginEnd="127dp"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="70dp" />

    <Button
        android:id="@+id/btnCustomAction"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="36dp"
        android:text="Activcate"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="50dp" />

    <Button
        android:id="@+id/btnCustomActionOff"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCustomAction"
        android:layout_alignStart="@+id/btnCustomAction"
        android:layout_alignBottom="@+id/btnCustomAction"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="-60dp"
        android:layout_toStartOf="@+id/tvLastActivatedDate"
        android:text="DeActivate" />

</RelativeLayout>
