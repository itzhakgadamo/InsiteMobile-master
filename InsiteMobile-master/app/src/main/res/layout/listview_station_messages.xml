<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:text="TextView"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="270dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/maps_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/maps_icon" />

    <ru.nikartm.support.ImageBadgeView
        android:id="@+id/info_icon"
        android:layout_width="66dp"
        android:layout_height="68dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"
        android:padding="10dp"
        android:src="@drawable/info_icon"
        app:ibv_badgeColor="#00ACC1"
        app:ibv_badgeLimitValue="false"
        app:ibv_badgeTextColor="#ffffff"
        app:ibv_badgeTextSize="10sp"
        app:ibv_badgeTextStyle="bold"
        app:ibv_badgeValue="100"
        app:ibv_fixedBadgeRadius="10dp" />

    <ImageView
        android:id="@+id/sms_icon"
        android:layout_width="51dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/maps_icon"
        android:layout_marginTop="127dp"
        android:src="@drawable/sms_icon" />

    <TextView
        android:id="@+id/tvButtomSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/maps_icon"
        android:layout_marginTop="211dp" />

    <TextView
        android:id="@+id/tvUnit"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvZone"
        android:layout_alignStart="@+id/tvLine"
        android:layout_marginBottom="11dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvLine"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvUnit"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="-177dp"
        android:layout_toStartOf="@+id/tvHeader"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvZone"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sms_icon"
        android:layout_alignStart="@+id/tvUnit"
        android:layout_marginBottom="11dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvMoreInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maps_icon"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_below="@+id/tvHeader"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="time"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvMoreInfoMessage"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/maps_icon"
        android:layout_marginTop="183dp"
        android:text="TextView" />

</RelativeLayout>