<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvStationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvHeader"
        android:text="TextView"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvIPPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvStationName"
        android:layout_below="@+id/tvStationName"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvKAInterval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvHeader"
        android:text="TextView"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvKAThreshold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvIPPort"
        android:layout_alignBottom="@+id/tvIPPort"
        android:layout_alignParentEnd="true"
        android:text="TextView"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvButtomSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvKAThreshold"
        android:layout_centerHorizontal="true" />
</RelativeLayout>